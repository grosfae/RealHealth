<Page x:Class="Client.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="1000"
      Title="ProfilePage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="380"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1" Height="500" Margin="0 10 0 0">
            <Image Source="/Resources/Human.png" Stretch="Uniform" Height="500"/>
            <Grid>
                <StackPanel VerticalAlignment="Top" Orientation="Horizontal" HorizontalAlignment="Left">
                    <Image Source="/Resources/HealthIcon.png" Height="30" Width="30" RenderOptions.BitmapScalingMode="Fant"/>
                    <TextBlock Text="{Binding GeneralHealth}" Style="{StaticResource SecondText}" FontSize="25" VerticalAlignment="Center" Margin="5 0 0 0" FontWeight="Bold" >
                        <TextBlock.Foreground>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="{Binding GeneralColor}" Offset="0.033"/>
                                <GradientStop Color="#FF131615" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                    </TextBlock>
                    <TextBlock Text="/440" Style="{StaticResource SecondText}" Foreground="Gray" FontSize="18" VerticalAlignment="Bottom"/>
                </StackPanel>
                <Ellipse x:Name="ElHead" Width="15" Height="15" VerticalAlignment="Top" Margin="2 20 0 0">
                    <Ellipse.Fill>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop x:Name="ElHeadColorSpot" Color="{Binding HeadColor}" Offset="0.033"/>
                            <GradientStop Color="#FF131615" Offset="1"/>
                        </LinearGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>
                <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Height="40" Margin="0 10 20 0">
                    <Grid>
                        <Polygon Points="90 0 0 0 0 20 110 20" HorizontalAlignment="Left">
                            <Polygon.Fill>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FF505050"/>
                                    <GradientStop Color="#FF121212" Offset="1"/>
                                </LinearGradientBrush>
                            </Polygon.Fill>
                        </Polygon>
                        <TextBlock Text="Голова" Style="{StaticResource SecondText}" Foreground="White" Width="100" FontSize="10" VerticalAlignment="Center"/>
                    </Grid>
                    <Grid Background="#FF121212" Height="20">
                        <TextBlock x:Name="TbHead" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" Style="{StaticResource SecondText}" Text="{Binding HeadEffectsHp,Mode=OneWay, StringFormat='{}{0}/35'}" Panel.ZIndex="1" FontSize="9"/>
                        <ProgressBar x:Name="PbHead" Width="105" Height="15" Background="Black" Margin="0 2 0 0" Maximum="35" BorderThickness="0" Value="{Binding HeadEffectsHp,Mode=OneWay}" BorderBrush="Transparent">
                            <ProgressBar.Foreground>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop x:Name="PbHeadColorSpot" Color="{Binding HeadColor}" Offset="0.033"/>
                                    <GradientStop Color="#FF131615" Offset="1"/>
                                </LinearGradientBrush>
                            </ProgressBar.Foreground>
                        </ProgressBar>
                    </Grid>
                </StackPanel>

                <Ellipse x:Name="ElTorso" Width="15" Height="15" VerticalAlignment="Top" Margin="2 120 0 0">
                    <Ellipse.Fill>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop x:Name="ElTorsoColorSpot" Color="{Binding TorsoColor}" Offset="0.033"/>
                            <GradientStop Color="#FF131615" Offset="1"/>
                        </LinearGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Height="40" Margin="30 70 20 0">
                    <Grid>
                        <Polygon Points="90 0 0 0 0 20 110 20" HorizontalAlignment="Left">
                            <Polygon.Fill>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FF505050"/>
                                    <GradientStop Color="#FF121212" Offset="1"/>
                                </LinearGradientBrush>
                            </Polygon.Fill>
                        </Polygon>
                        <TextBlock Text="Грудная клетка" Style="{StaticResource SecondText}" Foreground="White" Width="100" FontSize="10" VerticalAlignment="Center"/>
                    </Grid>
                    <Grid Background="#FF121212" Height="20">
                        <TextBlock x:Name="TbTorso" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" Style="{StaticResource SecondText}" Text="{Binding TorsoEffectsHp,Mode=OneWay, StringFormat='{}{0}/85'}" Panel.ZIndex="1" FontSize="9"/>
                        <ProgressBar x:Name="PbTorso" Width="105" Height="15" Margin="0 2 0 0" Maximum="85" Value="{Binding TorsoEffectsHp,Mode=OneWay}"  Background="Black" BorderThickness="0" BorderBrush="Transparent">
                            <ProgressBar.Foreground>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop x:Name="PbTorsoColorSpot" Color="{Binding TorsoColor}" Offset="0.033"/>
                                    <GradientStop Color="#FF131615" Offset="1"/>
                                </LinearGradientBrush>
                            </ProgressBar.Foreground>
                        </ProgressBar>
                    </Grid>
                </StackPanel>

                <Ellipse x:Name="ElStomach" Width="15" Height="15" VerticalAlignment="Top" Margin="2 190 0 0">
                    <Ellipse.Fill>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop x:Name="ElStomachColorSpot" Color="{Binding StomachColor}" Offset="0.033"/>
                            <GradientStop Color="#FF131615" Offset="1"/>
                        </LinearGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Height="40" Margin="30 140 20 0">
                    <Grid>
                        <Polygon Points="90 0 0 0 0 20 110 20" HorizontalAlignment="Left">
                            <Polygon.Fill>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FF505050"/>
                                    <GradientStop Color="#FF121212" Offset="1"/>
                                </LinearGradientBrush>
                            </Polygon.Fill>
                        </Polygon>
                        <TextBlock Text="Живот" Style="{StaticResource SecondText}" Foreground="White" Width="100" FontSize="10" VerticalAlignment="Center"/>
                    </Grid>
                    <Grid Background="#FF121212" Height="20">
                        <TextBlock x:Name="TbStomach" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" Style="{StaticResource SecondText}" Text="{Binding StomachEffectsHp,Mode=OneWay,StringFormat='{}{0}/70'}" Panel.ZIndex="1" FontSize="9"/>
                        <ProgressBar x:Name="PbStomach" Width="105" Height="15" Margin="0 2 0 0" Maximum="70" Value="{Binding StomachEffectsHp, Mode=OneWay}" Background="Black" BorderThickness="0" BorderBrush="Transparent">
                            <ProgressBar.Foreground>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop x:Name="PbStomachColorSpot" Color="{Binding StomachColor}" Offset="0.033"/>
                                    <GradientStop Color="#FF131615" Offset="1"/>
                                </LinearGradientBrush>
                            </ProgressBar.Foreground>
                        </ProgressBar>
                    </Grid>
                </StackPanel>

                <Ellipse x:Name="ElLeftHand" Width="15" Height="15" VerticalAlignment="Top" Margin="130 190 0 0">
                    <Ellipse.Fill>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop x:Name="ElLeftHandColorSpot" Color="{Binding LeftHandColor}" Offset="0.033"/>
                            <GradientStop Color="#FF131615" Offset="1"/>
                        </LinearGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>
                <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Height="40" Margin="0 160 5 0">
                    <Grid>
                        <Polygon Points="90 0 0 0 0 20 110 20" HorizontalAlignment="Left">
                            <Polygon.Fill>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FF505050"/>
                                    <GradientStop Color="#FF121212" Offset="1"/>
                                </LinearGradientBrush>
                            </Polygon.Fill>
                        </Polygon>
                        <TextBlock Text="Левая рука" Style="{StaticResource SecondText}" Foreground="White" Width="100" FontSize="10" VerticalAlignment="Center"/>
                    </Grid>
                    <Grid Background="#FF121212" Height="20">
                        <TextBlock x:Name="TbLeftHand" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" Style="{StaticResource SecondText}" Text="{Binding LeftHandEffectsHp,Mode=OneWay,StringFormat='{}{0}/60'}" Panel.ZIndex="1" FontSize="9"/>
                        <ProgressBar x:Name="PbLeftHand" Width="105" Height="15" Background="Black" Margin="0 2 0 0" Value="{Binding LeftHandEffectsHp,Mode=OneWay}" Maximum="60" BorderThickness="0" BorderBrush="Transparent">
                            <ProgressBar.Foreground>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop x:Name="PbLeftHandColorSpot" Color="{Binding LeftHandColor}" Offset="0.033"/>
                                    <GradientStop Color="#FF131615" Offset="1"/>
                                </LinearGradientBrush>
                            </ProgressBar.Foreground>
                        </ProgressBar>
                    </Grid>
                </StackPanel>

                <Ellipse x:Name="ElRightHand" Width="15" Height="15" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="118 190 0 0">
                    <Ellipse.Fill>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop x:Name="ElRightHandColorSpot" Color="{Binding RightHandColor}" Offset="0.033"/>
                            <GradientStop Color="#FF131615" Offset="1"/>
                        </LinearGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>
                <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Margin="5 160 0 0">
                    <Grid>
                        <Polygon Points="90 0 0 0 0 20 110 20" HorizontalAlignment="Left">
                            <Polygon.Fill>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FF505050"/>
                                    <GradientStop Color="#FF121212" Offset="1"/>
                                </LinearGradientBrush>
                            </Polygon.Fill>
                        </Polygon>
                        <TextBlock Text="Правая рука" Style="{StaticResource SecondText}" Foreground="White" Width="100" FontSize="10" VerticalAlignment="Center"/>
                    </Grid>
                    <Grid Background="#FF121212" Height="20">
                        <TextBlock x:Name="TbRightHand" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" Style="{StaticResource SecondText}" Text="{Binding RightHandEffectsHp,Mode=OneWay, StringFormat='{}{0}/60'}" Panel.ZIndex="1" FontSize="9"/>
                        <ProgressBar x:Name="PbRightHand" Width="105" Height="15" Margin="0 2 0 0" Maximum="60" Value="{Binding RightHandEffectsHp,Mode=OneWay}" Background="Black" BorderThickness="0" BorderBrush="Transparent">
                            <ProgressBar.Foreground>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop x:Name="PbRightHandColorSpot" Color="{Binding RightHandColor}" Offset="0.033"/>
                                    <GradientStop Color="#FF131615" Offset="1"/>
                                </LinearGradientBrush>
                            </ProgressBar.Foreground>
                        </ProgressBar>
                    </Grid>
                </StackPanel>

                <Ellipse x:Name="ElRightLeg" Width="15" Height="15" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="150 190 0 0">
                    <Ellipse.Fill>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop x:Name="ElRightLegColorSpot" Color="{Binding RightLegColor}" Offset="0.033"/>
                            <GradientStop Color="#FF131615" Offset="1"/>
                        </LinearGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>
                <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Height="40" Margin="15 150 0 0">
                    <Grid>
                        <Polygon Points="90 0 0 0 0 20 110 20" HorizontalAlignment="Left">
                            <Polygon.Fill>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FF505050"/>
                                    <GradientStop Color="#FF121212" Offset="1"/>
                                </LinearGradientBrush>
                            </Polygon.Fill>
                        </Polygon>
                        <TextBlock Text="Правая нога" Style="{StaticResource SecondText}" Foreground="White" Width="100" FontSize="10" VerticalAlignment="Center"/>
                    </Grid>
                    <Grid Background="#FF121212" Height="20">
                        <TextBlock x:Name="TbRightLeg" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" Style="{StaticResource SecondText}" Text="{Binding RightLegEffectsHp,Mode=OneWay,StringFormat='{}{0}/65'}" Panel.ZIndex="1" FontSize="9"/>
                        <ProgressBar x:Name="PbRightLeg" Width="105" Height="15" Background="Black" Value="{Binding RightLegEffectsHp,Mode=OneWay}" Margin="0 2 0 0" Maximum="65" BorderThickness="0" BorderBrush="Transparent">
                            <ProgressBar.Foreground>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop x:Name="PbRightLegColorSpot" Color="{Binding RightLegColor}" Offset="0.033"/>
                                    <GradientStop Color="#FF131615" Offset="1"/>
                                </LinearGradientBrush>
                            </ProgressBar.Foreground>
                        </ProgressBar>
                    </Grid>
                </StackPanel>


                <Ellipse x:Name="ElLeftLeg" Width="15" Height="15" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0 190 150 0">
                    <Ellipse.Fill>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop x:Name="ElLeftLegColorSpot" Color="{Binding LeftLegColor}" Offset="0.033"/>
                            <GradientStop Color="#FF131615" Offset="1"/>
                        </LinearGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>
                <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center" Height="40" Margin="0 150 15 0">
                    <Grid>
                        <Polygon Points="90 0 0 0 0 20 110 20" HorizontalAlignment="Left">
                            <Polygon.Fill>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FF505050"/>
                                    <GradientStop Color="#FF121212" Offset="1"/>
                                </LinearGradientBrush>
                            </Polygon.Fill>
                        </Polygon>
                        <TextBlock Text="Левая нога" Style="{StaticResource SecondText}" Foreground="White" Width="100" FontSize="10" VerticalAlignment="Center"/>
                    </Grid>
                    <Grid Background="#FF121212" Height="20">
                        <TextBlock x:Name="TbLeftLeg" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" Style="{StaticResource SecondText}" Text="{Binding LeftLegEffectsHp,Mode=OneWay, StringFormat='{}{0}/65'}" Panel.ZIndex="1" FontSize="9"/>
                        <ProgressBar x:Name="PbLeftLeg" Width="105" Height="15" Margin="0 2 0 0" Value="{Binding LeftLegEffectsHp,Mode=OneWay}"  Background="Black" Maximum="65" BorderThickness="0" BorderBrush="Transparent">
                            <ProgressBar.Foreground>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop x:Name="PbLeftLegColorSpot" Color="{Binding LeftLegColor}" Offset="0.033"/>
                                    <GradientStop Color="#FF131615" Offset="1"/>
                                </LinearGradientBrush>
                            </ProgressBar.Foreground>
                        </ProgressBar>
                    </Grid>
                </StackPanel>

            </Grid>
        </Grid>

        <Grid Grid.Column="0" Margin="10 10 0 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Оценка состояния:" FontSize="20"  HorizontalAlignment="Left" Foreground="#FF00965C"  Style="{StaticResource SecondText}" VerticalAlignment="Top"/>
                <TextBlock Text="{Binding HealthStatus}" FontSize="20"  HorizontalAlignment="Left"  Style="{StaticResource SecondText}" VerticalAlignment="Top" Margin="5 0 0 0">
                    <TextBlock.Foreground>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="{Binding GeneralColor}" Offset="0.033"/>
                            <GradientStop Color="#FF131615" Offset="1"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>
            </StackPanel>

            <StackPanel Grid.Row="1" Margin="0 10 0 0">
                <TextBlock Text="Текущие эффекты" FontSize="18"  HorizontalAlignment="Left" Foreground="#FFB30707"  Style="{StaticResource SecondText}" VerticalAlignment="Top"/>
                <ListView x:Name="LvEffects" d:ItemsSource="{d:SampleData ItemCount=5}" Height="370">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" ToolTip="{Binding Effect.Description}">
                                <Image Height="90" Width="90" Source="{Binding MainIcon}"/>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="{Binding Effect.Name}" FontSize="18" Width="480" TextWrapping="Wrap" HorizontalAlignment="Left" Foreground="#FF00965C"  Style="{StaticResource SecondText}" VerticalAlignment="Top"/>
                                    <StackPanel  Grid.Row="1" Margin="0 5 0 0">
                                        <TextBlock Text="{Binding Effect.HealingMethod.Name, StringFormat='Способ лечения: {0}'}" FontSize="16" Width="480" TextWrapping="Wrap" HorizontalAlignment="Left" Foreground="#FF6F6F6F" Style="{StaticResource SecondText}" VerticalAlignment="Top"/>
                                        <TextBlock Text="{Binding Effect.HealingMethod.Description}" FontSize="14" Width="480" TextWrapping="Wrap" HorizontalAlignment="Left" Foreground="#FF6F6F6F" Style="{StaticResource SecondText}" VerticalAlignment="Top"/>

                                    </StackPanel>
                                    <Button x:Name="RemoveBtn" Style="{StaticResource DefaltRedBtn}" Content="Вылечить" Width="120" Height="20" HorizontalAlignment="Left" FontSize="13" Grid.Row="2" VerticalAlignment="Bottom" Click="RemoveBtn_Click" Cursor="Hand"/>
                                </Grid>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
            
            <Button x:Name="EffectAddBtn" Style="{StaticResource DefaltBtn}" Content="Добавить симптом" FontSize="20" Width="300" Height="50" VerticalAlignment="Bottom" Margin="0 0 0 10" Grid.Row="2" Cursor="Hand" Click="EffectAddBtn_Click"/>
        </Grid>

    </Grid>
</Page>
